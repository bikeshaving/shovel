{
  "name": "shovel-website",
  "private": true,
  "type": "module",
  "scripts": {
    "predeploy": "npm run static",
    "deploy": "gh-pages -d dist/public --nojekyll --cname shovel.js.org",
    "develop": "shovel develop src/server.ts --port 1338 --platform bun",
    "static": "MODE=production shovel build src/server.ts --platform bun --lifecycle"
  },
  "dependencies": {
    "@b9g/assets": "workspace:*",
    "@b9g/filesystem": "workspace:*",
    "@b9g/crank": "^0.7.5",
    "@b9g/http-errors": "workspace:*",
    "@b9g/platform": "workspace:*",
    "@b9g/platform-bun": "workspace:*",
    "@b9g/router": "workspace:*",
    "@b9g/shovel": "link:@b9g/shovel",
    "@emotion/css": "^11.13.5",
    "@emotion/server": "^11.11.0",
    "front-matter": "^4.0.2",
    "marked": "^4.3.0",
    "normalize.css": "^8.0.1",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.30.0"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0"
  }
}
