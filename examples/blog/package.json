{
  "name": "shovel-blog-app",
  "private": true,
  "version": "0.1.0",
  "description": "Example Shovel blog app using cache-first architecture",
  "type": "module",
  "scripts": {
    "develop": "shovel develop src/server.js --port 3000",
    "build": "shovel build src/server.js --out dist",
    "start": "node dist/server.js",
    "static": "shovel static src/server.js --out dist",
    "preview": "cd dist && python3 -m http.server 3000"
  },
  "dependencies": {
    "@b9g/assets": "workspace:*",
    "@b9g/cache": "workspace:*",
    "@b9g/match-pattern": "workspace:*",
    "@b9g/platform": "workspace:*",
    "@b9g/router": "workspace:*",
    "@b9g/shovel": "../../dist"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "bun-types": "latest",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2"
  }
}
