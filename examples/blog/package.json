{
  "name": "shovel-blog",
  "private": true,
  "version": "0.1.0",
  "description": "Example Shovel blog app for Cloudflare Workers",
  "type": "module",
  "scripts": {
    "develop": "shovel develop src/server.ts --platform cloudflare",
    "build": "shovel build src/server.ts --platform cloudflare",
    "deploy": "wrangler deploy"
  },
  "dependencies": {
    "@b9g/assets": "workspace:*",
    "@b9g/cache": "workspace:*",
    "@b9g/match-pattern": "workspace:*",
    "@b9g/platform": "workspace:*",
    "@b9g/platform-cloudflare": "workspace:*",
    "@b9g/router": "workspace:*",
    "@b9g/shovel": "link:@b9g/shovel"
  },
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}
