{
  "databases": {
    "main": {
      "dialect": "bun-sqlite",
      "driver": {
        "module": "bun:sqlite",
        "export": "Database"
      },
      "url": "./data/admin.db",
      "schema": "./src/schema.ts"
    }
  },
  "caches": {
    "sessions": {
      "provider": "MODE === production ? redis : memory",
      "url": "REDIS_URL || redis://localhost:6379"
    }
  }
}
