{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"lib": ["ES2022", "WebWorker"],
		"jsx": "react-jsx",
		"jsxImportSource": "@b9g/crank"
	},
	"include": ["src/**/*", "packages/*/src/**/*", "test/**/*", "packages/*/test/**/*"],
	"exclude": ["node_modules", "dist", "**/dist", "examples", "packages/shovel-wpt"]
}
