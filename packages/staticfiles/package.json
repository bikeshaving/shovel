{
  "name": "@b9g/staticfiles",
  "version": "0.1.0",
  "description": "Static files middleware using File System Access API - no ESBuild dependencies",
  "type": "module",
  "scripts": {
    "build": "libuild build",
    "build:save": "libuild build --save",
    "publish": "libuild publish",
    "test": "bun test"
  },
  "keywords": [
    "shovel",
    "static-files",
    "middleware",
    "filesystem-api",
    "universal"
  ],
  "dependencies": {
    "@b9g/platform": "file:../platform"
  },
  "devDependencies": {
    "@b9g/libuild": "^0.1.0",
    "bun-types": "latest",
    "@types/node": "^18.0.0"
  },
  "private": true,
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./middleware": {
      "types": "./dist/src/middleware.d.ts",
      "import": "./dist/src/middleware.js"
    },
    "./populate": {
      "types": "./dist/src/populate.d.ts",
      "import": "./dist/src/populate.js"
    },
    "./package.json": "./dist/package.json"
  }
}