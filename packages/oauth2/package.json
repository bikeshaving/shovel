{
  "name": "@b9g/oauth2",
  "private": true,
  "version": "0.1.0",
  "description": "Universal OAuth2 client with PKCE support for web applications",
  "type": "module",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./package.json": "./dist/package.json",
    "./middleware": {
      "types": "./dist/src/middleware.d.ts",
      "import": "./dist/src/middleware.js"
    },
    "./middleware.js": {
      "types": "./dist/src/middleware.d.ts",
      "import": "./dist/src/middleware.js"
    },
    "./pkce": {
      "types": "./dist/src/pkce.d.ts",
      "import": "./dist/src/pkce.js"
    },
    "./pkce.js": {
      "types": "./dist/src/pkce.d.ts",
      "import": "./dist/src/pkce.js"
    },
    "./providers": {
      "types": "./dist/src/providers.d.ts",
      "import": "./dist/src/providers.js"
    },
    "./providers.js": {
      "types": "./dist/src/providers.d.ts",
      "import": "./dist/src/providers.js"
    },
    "./index": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./index.js": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "libuild build --save",
    "prepublishOnly": "echo 'ERROR: Cannot publish from root directory. Use libuild publish instead.' && exit 1"
  },
  "keywords": [
    "oauth2",
    "pkce",
    "authentication",
    "openid",
    "shovel"
  ],
  "author": "b9g",
  "license": "MIT",
  "dependencies": {},
  "peerDependencies": {
    "@b9g/router": "workspace:*"
  },
  "devDependencies": {
    "@b9g/libuild": "^0.1.18",
    "@types/bun": "^1.2.2",
    "typescript": "^5.7.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bikeshaving/shovel.git",
    "directory": "packages/oauth2"
  }
}
