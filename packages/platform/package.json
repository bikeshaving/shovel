{
  "name": "@b9g/platform",
  "version": "0.1.4",
  "description": "ServiceWorker-first universal deployment platform. Write ServiceWorker apps once, deploy anywhere (Node/Bun/Cloudflare). Registry-based multi-app orchestration.",
  "type": "module",
  "scripts": {
    "build": "libuild build --save",
    "build:save": "libuild build --save",
    "publish": "libuild publish",
    "test": "bun test"
  },
  "keywords": [
    "serviceworker",
    "universal",
    "deployment",
    "platform",
    "registry",
    "node",
    "bun",
    "cloudflare",
    "workers",
    "shovel"
  ],
  "dependencies": {
    "@b9g/async-context": "workspace:*",
    "@logtape/logtape": "^1.2.0"
  },
  "devDependencies": {
    "@b9g/libuild": "^0.1.11",
    "bun-types": "latest"
  },
  "private": true,
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./package.json": "./dist/package.json",
    "./worker-pool": {
      "types": "./dist/src/worker-pool.d.ts",
      "import": "./dist/src/worker-pool.js"
    },
    "./worker-pool.js": {
      "types": "./dist/src/worker-pool.d.ts",
      "import": "./dist/src/worker-pool.js"
    },
    "./runtime": {
      "types": "./dist/src/runtime.d.ts",
      "import": "./dist/src/runtime.js"
    },
    "./runtime.js": {
      "types": "./dist/src/runtime.d.ts",
      "import": "./dist/src/runtime.js"
    },
    "./config": {
      "types": "./dist/src/config.d.ts",
      "import": "./dist/src/config.js"
    },
    "./config.js": {
      "types": "./dist/src/config.d.ts",
      "import": "./dist/src/config.js"
    },
    "./cookie-store": {
      "types": "./dist/src/cookie-store.d.ts",
      "import": "./dist/src/cookie-store.js"
    },
    "./cookie-store.js": {
      "types": "./dist/src/cookie-store.d.ts",
      "import": "./dist/src/cookie-store.js"
    }
  }
}
