{
  "name": "@b9g/platform",
  "version": "0.1.12",
  "description": "ServiceWorker-first universal deployment platform. Write ServiceWorker apps once, deploy anywhere (Node/Bun/Cloudflare). Registry-based multi-app orchestration.",
  "type": "module",
  "scripts": {
    "build": "libuild build --save",
    "build:save": "libuild build --save",
    "publish": "libuild publish",
    "test": "bun test",
    "prepublishOnly": "echo 'ERROR: Cannot publish from root directory. Use libuild publish instead.' && exit 1"
  },
  "keywords": [
    "serviceworker",
    "universal",
    "deployment",
    "platform",
    "registry",
    "node",
    "bun",
    "cloudflare",
    "workers",
    "shovel"
  ],
  "dependencies": {
    "@b9g/async-context": "workspace:*",
    "@b9g/cache": "workspace:*",
    "@b9g/filesystem": "workspace:*",
    "@logtape/logtape": "^1.2.0"
  },
  "peerDependencies": {
    "@logtape/file": "^1.0.0",
    "@logtape/otel": "^1.0.0",
    "@logtape/sentry": "^1.0.0",
    "@logtape/syslog": "^1.0.0",
    "@logtape/cloudwatch-logs": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "@logtape/file": {
      "optional": true
    },
    "@logtape/otel": {
      "optional": true
    },
    "@logtape/sentry": {
      "optional": true
    },
    "@logtape/syslog": {
      "optional": true
    },
    "@logtape/cloudwatch-logs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@b9g/libuild": "^0.1.18",
    "bun-types": "latest"
  },
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./package.json": "./dist/package.json",
    "./runtime": {
      "types": "./dist/src/runtime.d.ts",
      "import": "./dist/src/runtime.js"
    },
    "./runtime.js": {
      "types": "./dist/src/runtime.d.ts",
      "import": "./dist/src/runtime.js"
    },
    "./index": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./index.js": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "private": true
}
