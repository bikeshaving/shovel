{
  "name": "@b9g/platform",
  "version": "0.1.4",
  "description": "ServiceWorker-first universal deployment platform. Write ServiceWorker apps once, deploy anywhere (Node/Bun/Cloudflare). Registry-based multi-app orchestration.",
  "type": "module",
  "scripts": {
    "build": "libuild build",
    "build:save": "libuild build --save",
    "publish": "libuild publish",
    "test": "bun test"
  },
  "keywords": [
    "serviceworker",
    "universal",
    "deployment",
    "platform",
    "registry",
    "node",
    "bun",
    "cloudflare",
    "workers",
    "shovel"
  ],
  "dependencies": {
    "@types/wicg-file-system-access": "^2023.10.7"
  },
  "devDependencies": {
    "@b9g/libuild": "^0.1.11",
    "bun-types": "latest"
  },
  "private": true,
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./package.json": "./dist/package.json",
    "./index": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./index.js": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./service-worker": {
      "types": "./dist/src/service-worker.d.ts",
      "import": "./dist/src/service-worker.js"
    },
    "./service-worker.js": {
      "types": "./dist/src/service-worker.d.ts",
      "import": "./dist/src/service-worker.js"
    },
    "./worker-pool": {
      "types": "./dist/src/worker-pool.d.ts",
      "import": "./dist/src/worker-pool.js"
    },
    "./worker-pool.js": {
      "types": "./dist/src/worker-pool.d.ts",
      "import": "./dist/src/worker-pool.js"
    },
    "./worker-web": {
      "import": "./dist/src/worker-web.js"
    },
    "./worker-web.js": {
      "import": "./dist/src/worker-web.js"
    },
    "./service-worker-api": {
      "import": "./dist/src/service-worker-api.js",
      "types": "./dist/src/service-worker-api.d.ts"
    },
    "./service-worker-api.js": {
      "import": "./dist/src/service-worker-api.js",
      "types": "./dist/src/service-worker-api.d.ts"
    },
    "./shovel-global-scope": {
      "import": "./dist/src/shovel-global-scope.js",
      "types": "./dist/src/shovel-global-scope.d.ts"
    },
    "./shovel-global-scope.js": {
      "import": "./dist/src/shovel-global-scope.js",
      "types": "./dist/src/shovel-global-scope.d.ts"
    }
  }
}
