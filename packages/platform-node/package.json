{
  "name": "@b9g/platform-node",
  "version": "0.1.0",
  "description": "Node.js platform adapter for Shovel with hot reloading and ESBuild integration",
  "type": "module",
  "scripts": {
    "build": "libuild build",
    "build:save": "libuild build --save",
    "publish": "libuild publish",
    "test": "bun test"
  },
  "keywords": [
    "shovel",
    "platform",
    "nodejs",
    "adapter",
    "hot-reload",
    "esbuild"
  ],
  "dependencies": {
    "@b9g/platform": "file:../platform",
    "@b9g/cache": "file:../cache",
    "@b9g/staticfiles": "file:../staticfiles",
    "@remix-run/node-fetch-server": "^0.11.0",
    "esbuild": "^0.19.12",
    "magic-string": "^0.30.17",
    "source-map": "^0.7.4"
  },
  "devDependencies": {
    "@b9g/libuild": "^0.1.0",
    "bun-types": "latest",
    "@types/node": "^18.0.0"
  },
  "private": true,
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./platform": {
      "types": "./dist/src/platform.d.ts",
      "import": "./dist/src/platform.js"
    },
    "./platform.js": {
      "types": "./dist/src/platform.d.ts",
      "import": "./dist/src/platform.js"
    },
    "./package.json": "./dist/package.json"
  }
}