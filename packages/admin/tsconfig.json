{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"jsxImportSource": "@b9g/crank"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "test"]
}
