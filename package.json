    },
    "./config.js": {
      "types": "./dist/src/config.d.ts",
      "import": "./dist/src/config.js"
    },
    "./populate": {
      "types": "./dist/src/populate.d.ts",
      "import": "./dist/src/populate.js"
    },
    "./populate.js": {
      "types": "./dist/src/populate.d.ts",
      "import": "./dist/src/populate.js"
    },
    "./watcher": {
      "types": "./dist/src/watcher.d.ts",
      "import": "./dist/src/watcher.js"
    },
    "./watcher.js": {
      "types": "./dist/src/watcher.d.ts",
