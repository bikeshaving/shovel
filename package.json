{
  "name": "@b9g/shovel",
  "version": "0.2.0-beta.6",
  "description": "ServiceWorker-first universal deployment platform. Write ServiceWorker apps once, deploy anywhere (Node/Bun/Cloudflare). Registry-based multi-app orchestration.",
  "license": "MIT",
  "type": "module",
  "bin": {
    "shovel": "./dist/bin/cli.js",
    "create-shovel": "./dist/bin/create.js",
    "cli": "./dist/bin/cli.js",
    "create": "./dist/bin/create.js"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "examples/tfb/frameworks/JavaScript/shovel"
  ],
  "scripts": {
    "build": "bun run --filter './packages/*' build && libuild build --save",
    "test": "bun test",
    "typecheck": "tsc --build",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx . --fix"
  },
  "dependencies": {
    "@b9g/async-context": "workspace:*",
    "@clack/prompts": "^0.7.0",
    "@logtape/logtape": "^1.2.0",
    "commander": "^13.1.0",
    "esbuild": "^0.19.12",
    "magic-string": "^0.30.5",
    "mime": "^4.0.4",
    "picocolors": "^1.0.0",
    "source-map": "^0.7.4"
  },
  "peerDependencies": {
    "@b9g/node-webworker": "workspace:*",
    "@b9g/platform": "workspace:*",
    "@b9g/platform-node": "workspace:*",
    "@b9g/platform-cloudflare": "workspace:*",
    "@b9g/platform-bun": "workspace:*",
    "@b9g/cache": "workspace:*",
    "@b9g/filesystem": "workspace:*",
    "@b9g/http-errors": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@b9g/platform": {
      "optional": true
    },
    "@b9g/platform-node": {
      "optional": true
    },
    "@b9g/platform-cloudflare": {
      "optional": true
    },
    "@b9g/platform-bun": {
      "optional": true
    },
    "@b9g/cache": {
      "optional": true
    },
    "@b9g/filesystem": {
      "optional": true
    },
    "@b9g/http-errors": {
      "optional": true
    }
  },
  "devDependencies": {
    "@b9g/assets": "workspace:*",
    "@b9g/cache": "workspace:*",
    "@b9g/crank": "^0.7.2",
    "@b9g/filesystem": "workspace:*",
    "@b9g/http-errors": "workspace:*",
    "@b9g/libuild": "^0.1.17",
    "@b9g/platform": "workspace:*",
    "@b9g/platform-bun": "workspace:*",
    "@b9g/platform-cloudflare": "workspace:*",
    "@b9g/platform-node": "workspace:*",
    "@b9g/router": "workspace:*",
    "@types/bun": "^1.2.2",
    "mitata": "^1.0.34",
    "typescript": "^5.7.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": true,
  "exports": {
    "./package.json": "./dist/package.json",
    "./bin/cli": {
      "import": "./dist/bin/cli.js"
    },
    "./bin/cli.js": {
      "import": "./dist/bin/cli.js"
    },
    "./bin/create": {
      "types": "./dist/bin/create.d.ts",
      "import": "./dist/bin/create.js"
    },
    "./bin/create.js": {
      "types": "./dist/bin/create.d.ts",
      "import": "./dist/bin/create.js"
    },
    ".": {
      "types": "./dist/src/worker-entry.d.ts",
      "import": "./dist/src/worker-entry.js"
    },
    "./worker-entry": {
      "types": "./dist/src/worker-entry.d.ts",
      "import": "./dist/src/worker-entry.js"
    },
    "./worker-entry.js": {
      "types": "./dist/src/worker-entry.d.ts",
      "import": "./dist/src/worker-entry.js"
    }
  },
  "module": "./dist/src/worker-entry.js",
  "types": "./dist/src/worker-entry.d.ts"
}
