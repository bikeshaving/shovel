{
  "name": "@b9g/shovel",
  "version": "0.2.12",
  "description": "ServiceWorker-first universal deployment platform. Write ServiceWorker apps once, deploy anywhere (Node/Bun/Cloudflare). Registry-based multi-app orchestration.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bikeshaving/shovel.git"
  },
  "type": "module",
  "bin": {
    "shovel": "./dist/bin/cli.js",
    "create-shovel": "./dist/bin/create.js",
    "cli": "./dist/bin/cli.js",
    "create": "./dist/bin/create.js"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "website"
  ],
  "scripts": {
    "build": "bun run --filter './packages/*' build && libuild build --save",
    "test": "bun test packages/*/test test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx . --fix",
    "prepare": "bash scripts/setup-wpt.sh",
    "prepublishOnly": "echo 'ERROR: Cannot publish from root directory. Use libuild publish instead.' && exit 1"
  },
  "dependencies": {
    "@b9g/async-context": "workspace:*",
    "@b9g/cache": "workspace:*",
    "@b9g/filesystem": "workspace:*",
    "@b9g/http-errors": "workspace:*",
    "@b9g/node-webworker": "workspace:*",
    "@b9g/platform": "workspace:*",
    "@b9g/platform-bun": "workspace:*",
    "@b9g/platform-cloudflare": "workspace:*",
    "@b9g/platform-node": "workspace:*",
    "@clack/prompts": "^0.7.0",
    "@logtape/logtape": "^2.0.0",
    "commander": "^13.1.0",
    "esbuild": "^0.27.2",
    "mime": "^4.0.4",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@b9g/assets": "workspace:*",
    "@b9g/crank": "^0.7.7",
    "@b9g/libuild": "^0.1.24",
    "@b9g/router": "workspace:*",
    "@eslint/js": "^9.0.0",
    "@logtape/file": "^2.0.0",
    "@types/bun": "^1.3.4",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild-plugins-node-modules-polyfill": "^1.8.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "miniflare": "^4.0.0",
    "mitata": "^1.0.34",
    "typescript": "^5.7.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./package.json": "./dist/package.json",
    "./bin/cli": {
      "import": "./dist/bin/cli.js"
    },
    "./bin/cli.js": {
      "import": "./dist/bin/cli.js"
    },
    "./bin/create": {
      "types": "./dist/bin/create.d.ts",
      "import": "./dist/bin/create.js"
    },
    "./bin/create.js": {
      "types": "./dist/bin/create.d.ts",
      "import": "./dist/bin/create.js"
    }
  },
  "module": "./dist/src/undefined.js",
  "types": "./dist/src/config.d.ts"
}
